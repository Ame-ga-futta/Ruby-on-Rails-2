<div class="room-show-wrapper">
  <div class="room-show-contents">
    <%= image_tag "#{@room.image}", class: "room-show-image" %>
    <div class="room-show-title">
      <div class="room-show-overview">
        <p class="room-show-name"><%= @room.name %></p>
        <p class="room-show-address"><%= @room.address %></p>
      </div>
      <div class="room-show-owner">
        <%= image_tag "#{@user.icon}" , class: "room-show-owner-image" %>
        <p class="room-show-owner-name"><%= @user.name %></p>
      </div>
    </div>
    <p class="room-show-introduction"><%= @room.introduction %></p>
  </div>

  <div class="room-show-reserve">
    <% if @reservation.errors.full_messages %>
      <% @reservation.errors.full_messages.each do |message| %>
        <p class="error"><%= message %></p>
      <% end %>
    <% end %>

    <div class="room-show-reserve-box">
      <p class="room-show-reserve-price"><%= "¥ #{@room.price} / 日" %></p>
      <%= form_with model: @reservation, url: {controller: 'reservations', action: 'confirm' } do |f| %>
        <ul class="room-show-reserve-form">
          <li>
            <p>開始日</p>
            <%= f.date_field :start_date, class: "reserve-field" %>
          </li>
          <li>
            <p>終了日</p>
            <%= f.date_field :end_date, class: "reserve-field" %>
          </li>
          <li>
            <p>人数</p>
            <%= f.number_field :people, class: "reserve-field" %>
          </li>
        </ul>
        <%= f.hidden_field :room_id, :value => @room.id %>
        <%= f.submit "予約する",class: "reserve-submit" %>
      <% end %>
    </div>
  </div>
</div>
